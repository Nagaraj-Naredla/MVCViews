

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index4</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div>
        <h1>Razor Programming Example-5</h1>
        <hr />
        <h3>Product Page</h3>
        <form action="" method="post">
            <label>Enter Product Name:</label>
            <input type="text" name="pName" placeholder="Enter Product Name" />
            <br /><br />
            <label> Enter Product Price:</label>
            <input type="text" name="pPrice" placeholder="Enter Product Price" />
            <br /><br />
            <label> Select Product Quantity:</label>
            <input type="number" min="1" max="5" name="pQty" />
            <br /><br />
            <input type="submit" name="submit" value="Calculate" />
        </form>
    </div>
    @{
        if (IsPost)
        {
            string productName = Request["pName"];
            double price = Convert.ToDouble(Request["pPrice"]);
            int qty = Convert.ToInt16(Request["pQty"]);
            double total = price * qty;
            <h4>
                Product Name is:@productName <br />
                Total cost is:@total
            </h4>

        }
    }
</body>
</html>
